<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Base application theme -->
<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here -->
    <item name="colorPrimary">@color/design_default_color_primary</item>
    <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
    <item name="colorAccent">@color/design_default_color_on_primary</item>
</style>

<style name="SignInTextStyle">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">35sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">roboto</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_marginBottom">8dp</item>
</style>

    <style name="SpinnerPopup" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:dropDownHorizontalOffset">8dp</item>
    </style>
</resources>
