<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="user"
            type="com.example.cruisemaster.crewdetails.model.User" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">



        <TextView
            android:text="@{user.firstName}"
            android:id="@+id/txt1"
            android:textSize="40sp"
            android:textStyle="bold"
            android:padding="25dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="@{user.lastName}"
            android:id="@+id/txt2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{user.isOnboard()}"
            android:id="@+id/txt3"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{user.isCheckedIn()}"
            android:id="@+id/txt4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@{user.signOnDate}"
            android:id="@+id/txt5"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="@{user.signOffDate}"
            android:id="@+id/txt6"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />






    </LinearLayout>
</layout>